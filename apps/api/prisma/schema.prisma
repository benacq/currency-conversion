generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CurrencyCode {
  NGN
  GHS
  USD
  KES
  EUR
}

enum TransactionType {
  DEBIT
  CREDIT
}

